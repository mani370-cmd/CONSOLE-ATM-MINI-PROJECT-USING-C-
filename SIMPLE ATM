using System;
namespace Mypro
{
    class ATM
    {
        static void Main()
        {
            Console.WriteLine("---WELCOME TO MY ATM---");
            Console.WriteLine();
            Console.WriteLine("1. Check Balance");
            Console.WriteLine("2.Deposit");
            Console.WriteLine("3.Withdraw");
            Console.WriteLine("4.Exit");
            Console.Write("Choose the option:");
            int option=int.Parse(Console.ReadLine());
            Console.WriteLine();
            Console.WriteLine("Enter your Pin Number:" );
            int pin = int.Parse(Console.ReadLine());

            int pinnumber = 3700;
            while (pin != pinnumber)
            {
                Console.WriteLine("PIN NUMBER INCORRECT...");
                Console.WriteLine("PLEASE RE-nter your Pin Number:");
                 pin = int.Parse(Console.ReadLine());

            }

            if (pin == pinnumber)
            {
                Console.WriteLine("SUCCESFULLY ENTER YOUR PIN...");
            }
            Console.WriteLine("Choose the option:");
            option = int.Parse(Console.ReadLine());
            switch (option)
            {
                case 1:
                    Console.WriteLine("CHECK BALANCE");
                    break;
                case 2:
                    Console.WriteLine("DEPOSIT");
                    break;
                case 3:
                    Console.WriteLine("WITHDRAW");
                    break;
                case 4:
                    Console.WriteLine("-------Exit------");
                    Console.WriteLine("--------THANK YOU SEE YOU NEXT TIME--------");
                    break;



            }
        }
    }
}
